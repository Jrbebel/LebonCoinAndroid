<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jrbebel.fr.monboncoin">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PrincipaleActivity"
            android:label="@string/title_activity_principale"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CategorieActivity"
            android:allowBackup="true"
            android:label="@string/title_activity_categorie"
            android:parentActivityName="jrbebel.fr.monboncoin.PrincipaleActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegionActivity"
            android:allowBackup="true"
            android:label="@string/title_activity_reigion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MonCompteActivity" />
        <activity android:name=".CameraActivity" />
        <activity android:name=".InscriptionActivity"></activity>
        <activity android:name=".AnnonceDetailActivity"></activity>
        <activity
            android:name=".DeposeAnnonceActivity"
            android:label="@string/title_activity_depose_annonce"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
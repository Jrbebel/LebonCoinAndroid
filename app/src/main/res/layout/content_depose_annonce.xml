<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="jrbebel.fr.monboncoin.DeposeAnnonceActivity"
    tools:showIn="@layout/activity_depose_annonce">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Catégorie"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Spinner
                android:id="@+id/spinnerCategorie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Vous êtes un : "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="6pt" />

            <RadioGroup
                android:id="@+id/radioGroupStatut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonParticulier"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:checked="true"
                    android:text="Particulier"
                    android:textSize="5pt" />

                <RadioButton
                    android:id="@+id/radioButtonPro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:checked="false"
                    android:text="Professionnel"
                    android:textSize="5pt" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Type annonce : "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="6pt" />

            <RadioGroup
                android:id="@+id/radioGroupTypeAnnonce"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonOffres"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:checked="true"
                    android:text="Offres"
                    android:textSize="5pt" />

                <RadioButton
                    android:id="@+id/radioButtonDemandes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:checked="false"
                    android:text="Demandes"
                    android:textSize="5pt" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTitre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Titre annonce"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="6pt" />

            <EditText
                android:id="@+id/editTextTitre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="123.29"
                android:textSize="6pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Texte annonce"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="6pt" />

            <EditText
                android:id="@+id/editTextDescriptif"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="61.93"
                android:textSize="6pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Prix"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="6pt" />

            <EditText
                android:id="@+id/editTextPrix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:textSize="6pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="180dp"
                android:text="Prendre photo"
                android:textSize="6pt" />

            <Button
                android:id="@+id/buttonValider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="180dp"
                android:text="Valider"
                android:textSize="6pt" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
